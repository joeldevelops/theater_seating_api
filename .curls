# Example cURL requests for local testing

# Create venue
curl -X POST -H "Content-Type: application/json" -d '{"name":"JoJo Hall","sections":[{"floor":"0","name":"main hall","total_seats":20}]}' localhost:8080/venue

# List all venues
curl localhost:8080/venue

# Seat groups
curl -X POST -H "Content-Type: application/json" -d '{"groups":[1,3,4,4,5,1,2,4],"rank":"1","venue_id":"61c95f272ae66f3472c7f6e4"}' localhost:8080/seats/order

# Seat groups with preferences
curl -X POST -H "Content-Type: application/json" -d '{"groups":[1,3,4,4,5,1,2,4],"rank":"1","venue_id":"61c95f272ae66f3472c7f6e4", "prefs":{"2":"aisle"}}' localhost:8080/seats/order

# Get user wallet
curl localhost:8080/wallet/2